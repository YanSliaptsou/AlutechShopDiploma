@model AlutechShopDiploma.Models.ResetPasswordViewModel
@{
    ViewBag.Title = AlutechShopDiploma.Resources.Views.Account.ResetPassword.ViewBagTitle;
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Code)
    <div class="form-group">
        <label class = "col-md-2 control-label">@AlutechShopDiploma.Resources.Views.Account.ResetPassword.Email</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">@AlutechShopDiploma.Resources.Views.Account.ResetPassword.Password</label>
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">@AlutechShopDiploma.Resources.Views.Account.ResetPassword.ConfirmPassword</label>
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="@AlutechShopDiploma.Resources.Views.Account.ResetPassword.BtnValue" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
