@model AlutechShopDiploma.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = AlutechShopDiploma.Resources.Views.Account.ForgotPassword.ViewBagTitle;
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>@AlutechShopDiploma.Resources.Views.Account.ForgotPassword.Caption</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <label class = "col-md-2 control-label" >@AlutechShopDiploma.Resources.Views.Account.ForgotPassword.Email</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="@AlutechShopDiploma.Resources.Views.Account.ForgotPassword.BtnValue" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
