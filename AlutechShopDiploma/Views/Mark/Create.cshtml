@model AlutechShopDiploma.Models.Entities.Mark

<head>
    <link href="~/Content/css/contactForm.css" rel="stylesheet" />
    <link href="~/Content/css/comment_field.css" rel="stylesheet" />
</head>

@{
    List<int> items = new List<int>();

    for (int i = 1; i <= 10; i++)
    {
        items.Add(i);
    }

    SelectList marks = new SelectList(items);
}

<body>
    <div class="container1" style="height: 160px;">
        <form action="/Mark/Create" method="post">
            <label>@AlutechShopDiploma.Resources.Views.Mark.Create.Label</label>
            @Html.DropDownListFor(model => model.UserMark, marks, new { @class = "form-control" })
            <input type="submit" class="" value="@AlutechShopDiploma.Resources.Views.Mark.Create.BtnValue">
        </form>
        <p>
        </p>
    </div>
</body>
