@model AlutechShopDiploma.Models.SetPasswordViewModel
@{
    ViewBag.Title = @AlutechShopDiploma.Resources.Views.Manage.SetPassword.ViewBagTitle;
}

<h2>@ViewBag.Title.</h2>
<p class="text-info">
    @AlutechShopDiploma.Resources.Views.Manage.SetPassword.Label
</p>

@using (Html.BeginForm("SetPassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <h4>@AlutechShopDiploma.Resources.Views.Manage.SetPassword.LabelP4</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <label class="col-md-2 control-label">@AlutechShopDiploma.Resources.Views.Manage.SetPassword.NewPassword</label>
        <div class="col-md-10">
            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">@AlutechShopDiploma.Resources.Views.Manage.SetPassword.ConfirmPassword</label>
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="@AlutechShopDiploma.Resources.Views.Manage.SetPassword.BtnValue" class="btn btn-default" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}