@using AlutechShopDiploma.Models.Enums

@model AlutechShopDiploma.Models.ViewModels.GoodViewModel
<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</head>

<style>


    .container {
        text-align: center;
    }

        .container > .drd1 {
            margin: 0 20px;
            vertical-align: top;
            width: 25%;
        }

    .drd1 {
        display: inline-block;
        position: relative;
        overflow: hidden;
        height: 28px;
        width: 150px;
        background: #f2f2f2;
        border: 1px solid;
        border-color: white #f7f7f7 whitesmoke;
        border-radius: 3px;
        background-image: -webkit-linear-gradient(top, transparent, rgba(0, 0, 0, 0.06));
        background-image: -moz-linear-gradient(top, transparent, rgba(0, 0, 0, 0.06));
        background-image: -o-linear-gradient(top, transparent, rgba(0, 0, 0, 0.06));
        background-image: linear-gradient(to bottom, transparent, rgba(0, 0, 0, 0.06));
        -webkit-box-shadow: 0 1px 1px rgba(0, 0, 0, 0.08);
        box-shadow: 0 1px 1px rgba(0, 0, 0, 0.08);
    }

        .drd1:before, .drd1:after {
            content: '';
            position: absolute;
            z-index: 2;
            top: 9px;
            right: 10px;
            width: 0;
            height: 0;
            border: 4px dashed;
            border-color: #888888 transparent;
            pointer-events: none;
        }

        .drd1:before {
            border-bottom-style: solid;
            border-top: none;
        }

        .drd1:after {
            margin-top: 7px;
            border-top-style: solid;
            border-bottom: none;
        }

    .drd1-select {
        position: relative;
        width: 130%;
        margin: 0;
        padding: 6px 8px 6px 10px;
        height: 28px;
        line-height: 14px;
        font-size: 12px;
        color: #62717a;
        text-shadow: 0 1px white;
        background: #f2f2f2; /* Fallback for IE 8 */
        background: rgba(0, 0, 0, 0) !important; /* "transparent" doesn't work with Opera */
        border: 0;
        border-radius: 0;
        -webkit-appearance: none;
    }

        .drd1-select:focus {
            z-index: 3;
            width: 100%;
            color: #394349;
            outline: 2px solid #49aff2;
            outline: 2px solid -webkit-focus-ring-color;
            outline-offset: -2px;
        }

        .drd1-select > option {
            margin: 3px;
            padding: 6px 8px;
            text-shadow: none;
            background: #f2f2f2;
            border-radius: 3px;
            cursor: pointer;
        }

    .lt-ie9 .drd1 {
        z-index: 5;
    }

    .lt-ie9 .drd1-select {
        z-index: -1;
    }

        .lt-ie9 .drd1-select:focus {
            z-index: 3;
        }


    -moz-document url-prefix() {
        padding-left: 6px;
    }

    .drd1-dark {
        background: #444;
        border-color: #111111 #0a0a0a black;
        background-image: -webkit-linear-gradient(top, transparent, rgba(0, 0, 0, 0.4));
        background-image: -moz-linear-gradient(top, transparent, rgba(0, 0, 0, 0.4));
        background-image: -o-linear-gradient(top, transparent, rgba(0, 0, 0, 0.4));
        background-image: linear-gradient(to bottom, transparent, rgba(0, 0, 0, 0.4));
        -webkit-box-shadow: inset 0 1px rgba(255, 255, 255, 0.1), 0 1px 1px rgba(0, 0, 0, 0.2);
        box-shadow: inset 0 1px rgba(255, 255, 255, 0.1), 0 1px 1px rgba(0, 0, 0, 0.2);
    }

        .drd1-dark:before {
            border-bottom-color: #aaa;
        }

        .drd1-dark:after {
            border-top-color: #aaa;
        }

        .drd1-dark .drd1-select {
            color: #aaa;
            text-shadow: 0 1px black;
            background: #444; /* Fallback for IE 8 */
        }

            .drd1-dark .drd1-select:focus {
                color: #ccc;
            }

            .drd1-dark .drd1-select > option {
                background: #444;
                text-shadow: 0 1px rgba(0, 0, 0, 0.4);
            }          
</style>

<body>
    <section class="container" style="margin-top:6%">
        <h2 style="position: absolute; margin-top: -0.3%; margin-left: 5%;">@AlutechShopDiploma.Resources.Views.GoodsSort.Sort.Label</h2>
        <div class="drd1">
            <select name="one" class="drd1-select" id="asc" onchange="CallActionList(this,'@Url.Action("List", "Good")')">
                <option value="IdAsc">@AlutechShopDiploma.Resources.Views.GoodsSort.Sort.IdAsc</option>
                <option value="NameAsc">@AlutechShopDiploma.Resources.Views.GoodsSort.Sort.NameAsc</option>
                <option value="PriceAsc">@AlutechShopDiploma.Resources.Views.GoodsSort.Sort.PriceAsc</option>
                <option value="ViewsAsc">@AlutechShopDiploma.Resources.Views.GoodsSort.Sort.ViewsAsc</option>
                <option value="RatingAsc">@AlutechShopDiploma.Resources.Views.GoodsSort.Sort.RatingAsc</option>
            </select>
        </div>

        <div class="drd1 drd1-dark">
            <select name="two" class="drd1-select" id="dsc" onchange="CallActionList(this,'@Url.Action("List", "Good")')">
                <option value="IdDesc">@AlutechShopDiploma.Resources.Views.GoodsSort.Sort.IdDesc</option>
                <option value="NameDesc">@AlutechShopDiploma.Resources.Views.GoodsSort.Sort.NameDesc</option>
                <option value="PriceDesc">@AlutechShopDiploma.Resources.Views.GoodsSort.Sort.PriceDesc</option>
                <option value="ViewsDesc">@AlutechShopDiploma.Resources.Views.GoodsSort.Sort.ViewsDesc</option>
                <option value="RatingDesc">@AlutechShopDiploma.Resources.Views.GoodsSort.Sort.RatingDesc</option>
            </select>
        </div>

    </section>

  

</body>

<script>
    function CallActionList(item, baseUrl) {
        window.location.href = baseUrl + '?sortState=' + item.value;
    }
</script>


